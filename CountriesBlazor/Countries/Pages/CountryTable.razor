    private void SortById()
    {
        if (flag == 1)
        {
            countries = countries
                .OrderBy(x => x.CountryId)
                .ToList();

            flag = 0;
        }
        else
        {
            countries = countries
               .OrderByDescending(x => x.CountryId)
               .ToList();

            flag = 1;
        }
    }

    private void SortByName()
    {
        if (flag == 0)
        {
            countries = countries
                .OrderBy(x => x.CountryName)
                .ToList();

            flag = 1;
        }
        else
        {
            countries = countries
               .OrderByDescending(x => x.CountryName)
               .ToList();

