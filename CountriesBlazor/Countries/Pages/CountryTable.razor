        }
    }

    private void SortByContinent()
    {
        if (flag == 0)
        {
            countries = countries
                .OrderBy(x => x.Continent)
                .ToList();

            flag = 1;
        }
        else
        {
            countries = countries
               .OrderByDescending(x => x.Continent)
               .ThenBy(x => x.CountryName)
               .ToList();

            flag = 0;
        }
    }
