@page "/countryTable"

<h1 class="text-center">Countries</h1>
<br />
<input @bind="Input" />
<button class="btn btn-primary" @onclick="Search">Search</button>
<h4 class="text-center">@Result</h4>
<br />
<div class="text-center">
    <button class="btn btn-primary" @onclick="Previous">Previous</button>
    <button class="btn btn-primary" @onclick="Next">Next</button>
</div>

@if (countries == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th><a class="btn btn-link" @onclick="SortById">Country Id</a></th>
                <th><a class="btn btn-link" @onclick="SortByName">Country Name</a></th>
                <th><a class="btn btn-link" @onclick="SortByContinent">Continent</a></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var country in countries)
            {
                <tr>
                    <td>@country.CountryId</td>
                    <td>@country.CountryName</td>
                    <td>@country.Continent</td>
                </tr>
            }
        </tbody>
    </table>
}

